<main>
      <div class="container valign-wrapper">
        <div class="row" style="min-width: 50%; margin-top: 5%">
          <form action="/users" method="POST" class="blue-grey lighten-5 z-depth-2 col s12 m12 l12">
            <!-- User Name -->
            <div class="row">
              <div class="input-field col s12 m12 l12">
                <i class="material-icons prefix blue-text">account_circle</i>
                <input id="last_name" name="userName" type="text" class="validate blue-text" />
                <label for="last_name" class="active blue-text"
                  >User Name</label
                >
              </div>
            </div>
            <!-- Email -->
            <div class="row">
              <div class="input-field blue-text col s12 m12 l12">
                <i class="material-icons prefix blue-text">email</i>
                <input id="email" name="userEmail" type="email" class="validate blue-text" />
                <label for="email" class="active blue-text">Email</label>
              </div>
            </div>
            <!-- Password -->
            <div class="row">
              <div class="input-field col s12 m12 l12">
                <i class="material-icons prefix blue-text">lock</i>
                <input
                  name="userPassword"
                  id="password"
                  type="password"
                  class="validate blue-text"
                />
                <label for="password" class="active blue-text">Password</label>
              </div>
            </div>
            <!-- Submit BUtton -->
            <div class="row center">
              <button class="btn" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
      <!--End Container-->
</main>

